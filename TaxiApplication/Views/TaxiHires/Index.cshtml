@model IEnumerable<TaxiApplication.Data.TaxiHire>

@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Owner.cshtml";

    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/site.css" rel="stylesheet" />

    <script src="/Scripts/modernizr-2.6.2.js"></script>

    <link href="/Content/tabstyle.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-2.2.3/pdfmake-0.1.18/dt-1.10.12/af-2.1.2/b-1.2.2/b-colvis-1.2.2/b-html5-1.2.2/b-print-1.2.2/fc-3.2.2/fh-3.1.2/kt-2.1.3/r-2.1.0/rr-1.1.2/sc-1.4.2/se-1.2.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-2.2.3/pdfmake-0.1.18/dt-1.10.12/af-2.1.2/b-1.2.2/b-colvis-1.2.2/b-html5-1.2.2/b-print-1.2.2/fc-3.2.2/fh-3.1.2/kt-2.1.3/r-2.1.0/rr-1.1.2/sc-1.4.2/se-1.2.0/datatables.min.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/Site.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" />
}
}

<h2>Index</h2>

<a class="btn btn-default" href="@Url.Action("Create","TaxiHires")">
    <i class="fa fa-plus"></i>
    Create New
</a>

<table class="table table-hover table-striped table-responsive" style="width:100%" id="my_list">

    <thead>
        <tr class="table-header-row">
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fuel.FuelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insurances.Insurance_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transmission.transName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxiModelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasicPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost_Per_Day)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.KiloRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentMilage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.seasts)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.owner.Email)
                    </td>*@
                <td>
                    <img src="@Url.Action("RenderImage", "TaxiHires", new { id = item.vehicleID})" width="50" height="60" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel.FuelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Insurances.Insurance_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Transmission.transName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxiMakes.MakeType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxiModels.TaxiModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BasicPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost_Per_Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KiloRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CurrentMilage)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.seasts)
                </td>

                <td>
                <td>
                    <a href="@Url.Action("Details","TaxiHires", new { id=item.vehicleID })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"></i></a>
                    <a href="@Url.Action("Edit","TaxiHires", new { id=item.vehicleID })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "TaxiHires", new { id = item.vehicleID })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-times"></i></a>
                </td>

            </tr>
        }
    </tbody>

</table>
<script type="text/javascript">
    $('#my_list').dataTable(
        {
            dom: 'Bfrtip',
            lengthMenu: [
                [10, 25, 50, -1],
                ['10 rows', '25 rows', '50 rows', 'Show all']
            ],
            buttons: [
                'pageLength', 'csv', 'pdf', 'print'
            ],
            language: { search: "" },
            select: true
        }
    );
    $(".dataTables_filter input").addClass("search-input");
    $(".dataTables_filter input").attr('placeholder', 'Search');
    $('#my_list')
        .removeClass('display')
        .addClass('table table-striped table-hover');</script>

<hr />
<script src="/Scripts/jquery-1.10.2.js"></script>
<script src="/Scripts/bootstrap.js"></script>
<script src="/Scripts/respond.js"></script>
