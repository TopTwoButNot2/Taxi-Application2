@model TaxiApplication.Data.ReportsVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Owner.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal modal-content" style="margin-top:2%;width:45%;padding-left:30px;padding-right:30px;margin-bottom:50px">
    <h4>Add Rank</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <label>Enter Date From</label>
    <br />
    <input type="date" name="DateFrom" class="w3-border w3-padding" required placeholder="enter Date From" />
    @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger" })
    <br />
    <label>Enter Date To</label>
    <br />
    <input type="date" name="DateTo" class="w3-border w3-padding" required placeholder="enter Date To" />
    @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
    <br /><br />

    <span class="w3-right">
        <button class="w3-button" type="submit" style="margin-top:5px;background-color:#f0ad4e;color:white"> Save </button>
    </span>
    <br /><br />
</div>
}
