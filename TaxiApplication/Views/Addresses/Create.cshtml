@model TaxiApplication.Data.Address

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal modal-content" style="margin-top:2%;width:45%;padding-left:30px;padding-right:30px;margin-bottom:50px">
    <h4>Add Address</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <label>Enter Address</label>
    <input type="text" name="RankName" class="w3-border w3-padding" required placeholder="enter address name" />
    @Html.ValidationMessageFor(model => model.adress, "", new { @class = "text-danger" })

    <label>Enter Reference</label>
    <input type="text" name="RankName" class="w3-border w3-padding" required placeholder="enter reference name" />
    @Html.ValidationMessageFor(model => model.reference, "", new { @class = "text-danger" })

    <label>Enter Date Updated</label>
    <input type="text" name="DateUpdated" class="w3-border w3-padding" required placeholder="enter Date Updated name" />
    @Html.ValidationMessageFor(model => model.DateUpdated, "", new { @class = "text-danger" })

    <span class="w3-left">
        <a class="w3-button" type="submit" style="margin-top:5px;background-color:#f0ad4e;color:white" href="~/Addresses/Index"> Back </a>
    </span>

    <span class="w3-right">
        <button class="w3-button" type="submit" style="margin-top:5px;background-color:#f0ad4e;color:white"> Save </button>
    </span>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
