@model IEnumerable<TaxiApplication.Data.Extra>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Owner.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExtraPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtraType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExtraPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExtraType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.extrasID }) |
